#!/bin/bash

# Create an RSA key pair with the specified requirements
ssh-keygen -t rsa -b 4096 -C "Generated by script" -f school

# Encrypt the private key with passphrase "betty"
openssl rsa -aes256 -in school -out school_encrypted -passout pass:betty

# Remove the unencrypted private key
rm school

echo "RSA key pair created successfully."

